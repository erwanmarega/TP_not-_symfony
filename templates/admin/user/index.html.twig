{# templates/admin/user/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <h1>Users</h1>
    <a href="{{ path('admin_user_create') }}">Create a new user</a>

    <ul>
        {% for user in users %}
            <li>
                {{ user.username }} - {{ user.email }}
                <a href="{{ path('admin_user_edit', { id: user.id }) }}">Edit</a>
                <a href="{{ path('admin_user_delete', { id: user.id }) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
